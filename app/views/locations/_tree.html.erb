<% begin
  # if roots does not exist or is nil, we'll create it
  roots.length
rescue
  if @context
    roots = Location.roots_from_set(@context.locations)
  else
    roots = Location.roots
  end
end -%>
<% parent ||= nil -%>
<% roots.each do |loc| -%>
  <%= render :partial => "location", :locals => { :loc => loc } %>
<% end -%>

<li class="addnew" id="add_location_<%= parent ? parent.id : "root" %>">
  <% form_for(:location, :url => locations_url + ".js", :html => { :method => :post }, :remote => true) do |f| -%>
    <% if parent -%>
      <%= f.hidden_field :parent_id, :value => parent.id %>
    <% end -%>
    <%= f.text_field :name %>
  <% end -%>
</li>
