<h1 id="pagetitle">New attendee for <%=h @event.fullname %></h1>

<% if @attendance.errors.any? %>
  <ul>
    <% @attendance.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(:attendance, :url => event_attendances_path(@event)) do |f| %>

  <p>
    <b>Email address of attendee:</b>
    <%= f.text_field :person_email %>
  </p>
  
  <p>
    <b>Waitlisted:</b>
    <%=f.check_box :is_waitlist %>
  </p>

  <p>
    <b>Counts towards total?</b>
    <%= f.check_box :counts %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', event_attendances_path(@event) %>
