<div class="agenda ui-widget ui-widget-content ui-corner-all" style="padding: 0.5em;">
  <h2>My events
    <% if @context -%>
      at <%= @context.fullname %>
    <% end -%></h2>

  <% if @current.length > 0 -%>
    <% reset_cycle("agenda_rows") -%>
    <h3>Events In Progress</h3>
    <table>
      <%= render :partial => 'attendance', :collection => @current %>
    </table>
  <% end -%>
  
  <% if @upcoming.length > 0 -%>
    <% reset_cycle("agenda_rows") -%>
    <h3>Upcoming events</h3>
    <table>
      <%= render :partial => 'attendance', :collection => @upcoming %>
    </table>
  <% end -%>
  
  <% if @past.length > 0 -%>
    <% reset_cycle("agenda_rows") -%>
    <h3>Past events</h3>
    <table>
      <%= render :partial => 'attendance', :collection => @past %>
    </table>
  <% end -%>
</div>
