<%= stylesheet_link_tag "schedules.css" %>

<% if can_edit_event?(procon_profile, :event => @context) -%>
  <h2>Administration</h2>

  <ul>
    <li><%= link_to "Edit schedule", edit_schedule_path(@schedule) %></li>
    <li><%= link_to "Check event health", :controller => "schedules", :action => "health", :id => @schedule.id %></li>
  </ul>
<% end -%>

<% if @events.size == 0 -%>
  <p>There are no events on this schedule.</p>
<% else -%>
  <% @blocks.each do |block| -%>
    <%= schedule_block(@schedule, block) %>
  <% end -%>
<% end -%>
