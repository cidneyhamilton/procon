<h1 id="pagetitle">Proposed Events</h1>

<table>
  <tr>
    <th>Status</th>
    <th>Name</th>
    <th>Proposer</th>
    <th>Date</th>
  </tr>
<% @proposed_events.each do |proposed_event| %>
  <tr>
    <td>
      <% if proposed_event.event -%>
        Accepted
      <% else -%>
        Pending
      <% end -%>
    </td>
    <td><%= link_to proposed_event.fullname, proposed_event %></td>
    <td><%= proposed_event.proposer.try(:name) || "Unknown" %></td>
    <td><%= proposed_event.created_at %></td>
  </tr>
<% end %>
</table>